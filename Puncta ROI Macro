    imageName = "Area3-";
    if (i < 10) {
        imageName += "000" + i;
    } else {
        imageName += "00" + i;
    }

    selectImage(imageName);
    getStatistics(area, mean, min, max, stdDev, histogram);
    thresholdValue = mean;
    setThreshold(thresholdValue, max);
    run("Convert to Mask");

    // Ensure the image is converted to a mask before creating selection
    if (selectionType() >= 0) {
        run("Create Selection");
        roiManager("Add");
        roiManager("Select", roiManager("count") - 1); // Selects the last added ROI
