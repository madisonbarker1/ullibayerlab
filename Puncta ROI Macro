    for (i = 0; i < roiManager("count"); i++) {
        roiManager("select", i);
        setSlice(i + 1);
        run("Measure");
    }
}

saveAs("Results", filedir + fileNum + "HubPunctaArea_results.csv");
selectWindow("Results"); run("Close");
roiManager("Reset");

run("Close All");
